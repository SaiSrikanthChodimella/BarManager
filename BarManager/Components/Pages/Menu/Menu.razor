@page "/Bar_Menu"

<h3>Our Menu</h3>

<RadzenTabs @bind-SelectedIndex=@selectedIndex>
    <Tabs>
        <RadzenTabsItem Text="Starters">
            <!-- Starters -->
            <RadzenRow>
                @foreach (var item in Starters)
                {
                    <RadzenColumn Size="12" SizeMD="6" SizeLG="4" Style="margin-bottom: 1.5rem;">
                        <MenuCard Item="@item" />
                    </RadzenColumn>
                }
            </RadzenRow>
        </RadzenTabsItem>

        <!-- Main Course -->
        <RadzenTabsItem Text="Main Course">
            <RadzenRow>
                @foreach (var item in MainCourse)
                {
                    <RadzenColumn Size="12" SizeMD="6" SizeLG="4" Style="margin-bottom: 1.5rem;">
                        <MenuCard Item="@item" />
                    </RadzenColumn>
                }
            </RadzenRow>
        </RadzenTabsItem>

        <!-- Desserts -->
        <RadzenTabsItem Text="Desserts">
            <RadzenRow>
                @foreach (var item in Desserts)
                {
                    <RadzenColumn Size="12" SizeMD="6" SizeLG="4" Style="margin-bottom: 1.5rem;">
                        <MenuCard Item="@item" />
                    </RadzenColumn>
                }
            </RadzenRow>
        </RadzenTabsItem>
    </Tabs>
</RadzenTabs>

@code {
    int selectedIndex = 0;
}



