<RadzenCard Style="text-align: center; padding: 1rem;">
    <RadzenImage Path="@Item.Image" Style="width: 100%; height: 150px; object-fit: cover; border-radius: 10px;" />
    <h4 style="margin-top: 1rem;">@Item.Name</h4>
    <p style="margin-bottom: 1rem;">@Item.Description</p>
    <p style="font-size: 1.25rem; font-weight: bold;">$@Item.Price</p>
</RadzenCard>


@code {
    [Parameter]
    public MenuItem Item { get; set; }
}